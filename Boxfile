build:
  type: php
  version: 5.5
  stability: production
  reuse_libs: true
  lib_dir: web/concrete/vendor

  exec:
    - "composer install --no-interaction --prefer-source --working-dir=web/concrete"

  after_exec:
    - "mv pagodabox/copies/bootstrap/start.php web/application/bootstrap/start.php"
    - "mv pagodabox/copies/config/app.php web/application/config/app.php"
    - "mv pagodabox/copies/config/concrete.php web/application/config/concrete.php"
    - "mv pagodabox/copies/config/database.php web/application/config/database.php"
    - "php pagodabox/after_exec.php"

